{% set sources = page.meta.get("sources", []) %}

{% if sources -%}
<h2>Components&nbsp;<a class="headerlink" href="#s-sources">Â¶</a></h2>

<Table class="ui-sources">
<thead>
  <tr>
    <th>Component</th>
    <th>File</th>
    <th class="right">Source</th>
  </tr>
</thead>
<tbody>
{% for cname, filename in sources -%}
  {%- if filename.startswith(("http://", "https://")) -%}
    {% set url = filename %}
  {%- else -%}
    {% set url = metadata.repo + "/tree/main/src/jinjax_ui/components/" + filename %}
  {%- endif -%}

  <tr>
    <th>{% if cname %}<strong><code>{{ cname }}</code></strong>{% endif %}</th>
    <td><code>{{ filename }}</code></td>
    <td class="right"><Button
      icon="terminal"
      size="mini"
      href={{url}}
      target="_blank"
      rel="noopener noreferrer"
    >See source</Button></td>
  </tr>
{% endfor %}
</tbody>
</Table>
{%- endif %}
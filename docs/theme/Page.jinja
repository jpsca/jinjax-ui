<Layout
  title={{ page.title }}
  description={{ page.description }}
  class={{ meta.get('class', 'cd-page') }}
>
  <NavTop></NavTop>
  <div class="page-wrapper">
    <NavGlobal></NavGlobal>
    <main id="main" class="page prose">{{ content }}</main>
    <NavLocal></NavLocal>
  </div>
  <PrevNext
    curr={{ page }}
    prev={{ page.prev_page }}
    next={{ page.next_page }}
  />
  <NavMobile></NavMobile>
  <Footer></Footer>
</Layout>

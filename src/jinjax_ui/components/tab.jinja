{#def
  target,
  selected=false,
  disabled=false,
  tag="button",
#}
{#css tab.css #}
{#js tab.js #}

{%- if tag == "button" -%}
  {% do attrs.setdefault(type="button") %}
{%- endif -%}

{% if disabled %}
  {% do attrs.set(aria_disabled=True) %}
{% elif selected %}
  {% do attrs.set(aria_selected=True) %}
{% endif %}

<{{ tag }} {{ attrs.render(
  class="jxui-tab",
  role="tab",
  aria_controls=target,
  tabindex="0" if selected else "-1",
) }}>{{ content }}</{{ tag }}>


{#def
  target: str = "",
  valid: str | None = None,
  invalid: str | None = None,
  caption: str | None = None,
  countermax: str | int | None = None,
  countermin: str | int | None = None,
#}
{#css jxui.css, form-field.css #}

<div class="jxui-form-footer">
  {% if valid or invalid or caption -%}
  <div>
    {% if valid -%}
      <span class="jxui-form-valid"><Icon name="check" /> {{valid}}</span>
    {%- endif %}
    {% if invalid -%}
      <span class="jxui-form-invalid"><Icon name="cancel" /> {{invalid}}</span>
    {%- endif %}
    {% if caption -%}
      <FormCaption id={{target + "-caption"}}>{{caption}}</FormCaption>
    {%- endif %}
  </div>
  {%- endif %}
  {% if countermax or countermin -%}
    <FormCounter target={{target}} min={{countermin}} max={{countermax}} />
  {%- endif %}
</div>

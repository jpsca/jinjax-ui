{#def src: str = "", alt: str = "", size: str = "" #}
{#css avatar/avatar.css #}

{% if size %}
{% do attrs.set(data_size=size) %}
{% endif %}

<span {{ attrs.render(class="jxui-avatar") }}>
  <span>{{ alt }}</span>
  {% if src -%}
    <img src="{{ src }}" onload="this.style.display='block'" alt="{{ alt }}" />
  {%- endif %}
</span>


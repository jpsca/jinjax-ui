{#def
  tag: str = "",
  href: str = "",
  var: str = "",
  size: str = "",
  shape: str = "",
  block: bool = False,
  disabled: bool = False,
  loading: bool = False,
  icon: str = "",
#}
{#css button.css #}

{% if not tag %}
  {% if href %}
    {% set tag = "a" %}
  {% else %}
    {% set tag = "button" %}
  {% endif %}
{% endif %}

{% if tag == "button" %}
  {% do attrs.setdefault(type="button") %}
{% endif %}

{% if var %}
  {% do attrs.set(data_var=var) %}
{% endif %}

{% if size %}
  {% do attrs.set(data_size=size) %}
{% endif %}

{% if block %}
  {% set shape = "block" %}
{% endif %}
{% if shape %}
  {% do attrs.set(data_shape=shape) %}
{% endif %}

{% if loading %}
  {% do attrs.set(aria_busy="true", data_disabled=True) %}
{% endif %}
{% if disabled %}
  {% do attrs.set(data_disabled=True) %}
{% endif %}

{# JinjaX-UI. Copyright Juan-Pablo Scaletti. MIT License #}

<{{ tag }} {{ attrs.render(
  class="jxui-button",
  href=href,
) }}>
  {%- if loading -%}
    <Form.Loading />
  {%- elif icon -%}
    <Icon class="jxui-button-icon" name={{ icon }} />
  {%- endif -%}
  {{ content }}
</{{ tag }}>


{#def
  manual=False,
  position = "top",
  align = "start",
  tag="div",
#}
{#css jxui.css, tab.css #}
{#js stimulus-3.2.2.js, tab-controller.js #}

<{{ tag }} {{ attrs.render(
  class="jxui-tab-group",
  aria_orientation="vertical" if position in ("left", "right") else "horizontal",
  data_manual=manual,
  data_position=position,
  data_align=align,
) }}>{{ content }}</{{ tag }}>

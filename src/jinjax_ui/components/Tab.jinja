{#def target, selected=false, disabled=false, tag="button" #}
{#css jxui.css, Tab.css #}
{#js jxui.js, Tab.js #}

{%- if tag == "button" -%}
  {% do attrs.setdefault(type="button") %}
{%- endif -%}

{% if disabled %}
  {% do attrs.set(class="jxui-disabled") %}
{% elif selected %}
  {% do attrs.set(class="jxui-selected") %}
{% endif %}

<{{ tag }} {{ attrs.render(
  class="jxui-Tab",
  role="tab",
  aria_selected="true" if selected and not disabled else "false",
  aria_controls=target,
  tabindex="0" if selected else "-1",
) }}>{{ content }}</{{ tag }}>
